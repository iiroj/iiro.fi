{
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentSize": 4,
        "lineWidth": 120,
        "ignore": [".cache", "build", "node_modules", "public/build"]
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        },
        "ignore": [".cache", "build", "node_modules", "public/build"]
    },
    "organizeImports": {
        "enabled": true,
        "ignore": [".cache", "build", "node_modules", "public/build"]
    }
}
