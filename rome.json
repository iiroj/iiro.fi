{
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentSize": 4,
        "lineWidth": 120,
        "ignore": [".next", ".vercel", "node_modules"]
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        },
        "ignore": [".next", ".vercel", "node_modules"]
    },
    "organizeImports": {
        "enabled": true,
        "ignore": [".next", ".vercel", "node_modules"]
    }
}
