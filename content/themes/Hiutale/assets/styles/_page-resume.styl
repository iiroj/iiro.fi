main#resume
  margin 3*unit 6*unit

  article
    box-shadow 0 0 0 1px rgba(0, 0, 0, 0.05), 0 4px 4px rgba(0, 0, 0, 0.1), 0 1px 40px rgba(0, 0, 0, 0.1)
    box-sizing border-box
    font-family Times, serif
    margin 0 auto
    max-width 210mm
    min-height 297mm
    padding 3*unit

    > h1
      font-size 3*unit
      line-height 3*unit
      margin-bottom 10px
    > h2
      color alpha(textColor, 0.4)
      font-style italic
      line-height 2*unit
      margin-bottom 3*unit
    > h3
      font-weight bold
      margin-bottom unit
    > ul
      margin-bottom 2*unit

      > li
        margin-bottom unit

        em
          color alpha(textColor, 0.4)
          font-style italic
        > em
          float left
          width 25%
        > ul
          margin-left 25%

          > li
            > strong
              display block
              font-weight bold
            > em
              display block

    @media (min-width breakOff1)
      padding 6*unit

      > h3
        margin-bottom -3*unit
      > ul
        margin-left 30%
