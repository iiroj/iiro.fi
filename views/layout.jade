doctype html
html
  head
    meta(charset="utf-8")
    title Iiro Jäppinen: #{title}
    block pageDescription
    meta(name="viewport" content="width=device-width,user-scalable=no,initial-scale=1,maximum-scale=1")
    link(rel="stylesheet" href="/style.css")
    script.
