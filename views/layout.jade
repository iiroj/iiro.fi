doctype html
html
  head
    meta(charset="utf-8")
    title Iiro Jäppinen: #{title}
    block pageDescription
    meta(name="viewport" content="width=device-width,user-scalable=no,initial-scale=1,maximum-scale=1")
    link(rel="stylesheet" href="/style.css")
  body(vocab="http://schema.org" class="#{title}")
    input(type="checkbox" id="nav-checkbox")
    label(for="nav-checkbox")
    nav#nav
      ul
        li(class=(title === "Home" ? "active" : ""))
          a(href="/" accesskey="H" rel="author url prefetch" id="Home") Home
        li(class=(title === "About" ? "active" : ""))
          a(href="/about" accesskey="A" rel="author url prefetch" id="About") About
        li(class=(title === "Résumé" ? "active" : ""))
          a(href="/resume" accesskey="R" rel="author url prefetch" id="Résumé") Résumé
        li
          a(href="mailto:Iiro Jäppinen <iiro@jappinen.fi>" accesskey="C") Contact
    div#nav-overlay
    div#content
      block pageContent
