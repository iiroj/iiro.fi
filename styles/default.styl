@import "nib"
global-reset()

@font-face
  font-family "Droid Serif"
  font-style normal
  font-weight 400
  src local("Droid Serif"), local("DroidSerif"), url("/font/DroidSerif-Regular.woff2") format("woff2"), url("/font/DroidSerif-Regular.woff") format("woff")
  unicode-range U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000

@font-face
  font-family "Droid Serif"
  font-style normal
  font-weight 700
  src local("Droid Serif Bold"), local("DroidSerif-Bold"), url("/font/DroidSerif-Bold.woff2") format("woff2"), url("/font/DroidSerif-Bold.woff") format("woff")
  unicode-range U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000

@font-face
  font-family "Droid Serif"
  font-style italic
  font-weight 400
  src local("Droid Serif Italic"), local("DroidSerif-Italic"), url("/font/DroidSerif-Italic.woff2") format("woff2"), url("/font/DroidSerif-Italic.woff") format("woff")
  unicode-range U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000

html
  height 100%

body
  background-color rgb(242, 242, 242)
  color rgb(120, 120, 120)
  font-family 'Droid Serif', serif
  font-size 14px
  line-height 24px

@import "index.styl"
@import "resume.styl"
@import "print.styl"
