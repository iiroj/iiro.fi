body#index
  height 100%

  figure.picture
    background-image url('profile.jpg')
    background-position 50% 50%
    background-size cover
    height 50%
    margin 0
    width 100%

  div.content
    box-sizing border-box
    display flex
    flex-direction column
    justify-contents center
    min-height 50%
    padding 24px
    text-align center

    article
      align-self center
      flex 1
      margin-bottom 24px
      width 100%

      h1
        font-size 24px

    footer
      align-self flex-end
      width 100%

      ul
        display flex
        align-items center

        li
          flex 1

          a
            color inherit
            display block
            line-height 48px
            text-decoration none

            &:hover
              background-color rgba(0, 0, 0, 0.1)

  @media (min-width 640px)
    figure.picture
      fixed top 0 left 0
      height 100%
      width 50%
    div.content
      margin-left 50%
      height 100%