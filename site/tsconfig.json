{
    "compilerOptions": {
        "allowJs": true,
        "declaration": false,
        "esModuleInterop": true,
        "jsx": "preserve",
        "lib": ["DOM", "ES2020"],
        "module": "ES2020",
        "moduleResolution": "Node",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "ES2020",
        "typeRoots": ["./types"]
    },
    "exclude": ["dist", "node_modules", "public"]
}
