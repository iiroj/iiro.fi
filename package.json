{
  "name": "iiro.jappinen.fi",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build-css": "postcss -u autoprefixer --autoprefixer.browsers 'last 2 version' -u cssnano -o static/style.css",
    "build-html": "inline-source --root ./static index.html > public/index.html",
    "build-scss": "node-sass scss/default.scss | npm run build-css",
    "server": "live-server public/ --quiet",
    "start": "npm run watch & npm run server",
    "watch": "npm run watch-assets & npm run watch-scss & npm run watch-html",
    "watch-assets": "onchange 'static/*.ico' 'static/*.jpg' 'static/*.png' -i -- cp static/{*.ico,*.jpg,*.png} public/",
    "watch-scss": "onchange 'scss/*.scss' -i -- npm run build-scss",
    "watch-html": "onchange 'index.html' -i -- npm run build-html"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "cssnano": "^3.7.1",
    "inline-source-cli": "^1.1.1",
    "live-server": "^1.0.0",
    "node-sass": "^3.8.0",
    "onchange": "^2.5.0",
    "postcss-cli": "^2.5.2"
  }
}
