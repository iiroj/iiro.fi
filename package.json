{
  "name": "iiro.jappinen.fi",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run watch & npm run server",
    "build": "npm run build:scss && npm run build:css && npm run build:html",
    "build:scss": "node-sass src/scss/index.scss | postcss -u autoprefixer --autoprefixer.browsers 'last 2 version' -o src/static/style.css",
    "build:css": "postcss -u cssnano -o src/static/style.min.css src/static/style.css",
    "build:html": "inline-source --root ./src/static src/index.html > build/index.html",
    "server": "live-server build/ --quiet --watch build/",
    "watch": "npm run watch:assets & npm run watch:dynamic",
    "watch:assets": "onchange 'src/static/{*.ico,*.jpg,*.png}' -i -- cp src/static/{*.ico,*.jpg,*.png} build/",
    "watch:dynamic": "onchange 'src/scss/*.scss' 'src/index.html' -i -- npm run build"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "cssnano": "^3.7.1",
    "inline-source-cli": "^1.1.1",
    "live-server": "^1.0.0",
    "node-sass": "^3.8.0",
    "onchange": "^2.5.0",
    "postcss-cli": "^2.5.2"
  }
}
