{
  "name": "iiro.jappinen.fi",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run build-scss",
    "postbuild": "npm run build-html",
    "build-css": "postcss -u autoprefixer --autoprefixer.browsers 'last 2 version' -u cssnano -o src/static/style.css",
    "postbuild-css": "npm run build-html",
    "build-html": "inline-source --root ./src/static src/index.html > dist/index.html",
    "build-scss": "node-sass src/scss/index.scss | npm run build-css",
    "server": "live-server dist/ --quiet --watch src/",
    "start": "npm run watch & npm run server",
    "watch": "npm run watch-assets & npm run watch-scss & npm run watch-html",
    "watch-assets": "onchange 'src/static/{*.ico,*.jpg,*.png}' -i -- cp src/static/{*.ico,*.jpg,*.png} dist/",
    "watch-scss": "onchange 'src/scss/*.scss' -i -- npm run build-scss",
    "watch-html": "onchange 'src/index.html' -i -- npm run build-html"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "cssnano": "^3.7.1",
    "inline-source-cli": "^1.1.1",
    "live-server": "^1.0.0",
    "node-sass": "^3.8.0",
    "onchange": "^2.5.0",
    "postcss-cli": "^2.5.2"
  }
}
