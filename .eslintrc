{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "extends": [
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "react",
    "emotion",
    "prettier"
  ],
  "rules": {
    "no-unused-vars": [2, {
      "args": "none",
      "vars": "all",
      "varsIgnorePattern": "hJSX"
    }],
    "react/prop-types": 1,
    "react/display-name": 0,
    "emotion/syntax-preference": [2, "string"],
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "trailingComma": "all"
      }
    ]
  }
}
